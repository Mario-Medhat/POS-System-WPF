<UserControl x:Class="POS_System___WPF.Views.SalesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS_System___WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- PRODUCTS LIST -->
        <TextBlock Text="Products" Grid.Row="0" FontSize="20" Margin="0 0 0 10"/>

        <ListBox Grid.Row="1" Margin="10,0,10,0"
                ItemsSource="{Binding Products}"
                 SelectedItem="{Binding SelectedProduct}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="{Binding ProductName}" Width="150"/>

                        <!-- تنسيق السعر -->
                        <TextBlock Text="{Binding Price}" Width="80"/>

                        <!-- العملة -->
                        <TextBlock Text="EGP"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Vertical" VerticalAlignment="Center" Margin="10">
            <StackPanel Orientation="Horizontal" Margin="0 10">
                <TextBlock Text="Qty:" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Quantity}" Width="50" Margin="10 0"/>
            </StackPanel>

            <Button Content="Add to Cart"
            FontSize="16"
            Padding="10"
            Margin="0 10 0 0"
            Command="{Binding AddToCartCommand}"/>

        </StackPanel>


        <!-- CART -->
        <TextBlock Grid.Column="1" Grid.Row="0" Text="Cart Items" FontSize="20" Margin="0,0,0,10"/>

        <ListView ItemsSource="{Binding Cart}" Grid.Column="1" Grid.Row="1"  Margin="10,0,10,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Product" DisplayMemberBinding="{Binding Product.ProductName}"/>
                    <GridViewColumn Header="Qty" DisplayMemberBinding="{Binding Quantity}"/>
                    <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Product.Price}"/>
                    <GridViewColumn Header="Total" DisplayMemberBinding="{Binding TotalAmount}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Column="1" Grid.Row="2" Margin="10">
            <TextBlock Text="{Binding TotalAmount, StringFormat=Total: {0} EGP}"
               FontSize="22"
               Margin="0 10"/>

            <Button Content="Remove Last Item"
            FontSize="16"
            Padding="10"        
            Command="{Binding RemoveItemCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
