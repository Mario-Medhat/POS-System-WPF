<UserControl x:Class="POS_System___WPF.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS_System___WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <UniformGrid Grid.Row="0" Margin="10 0" Rows="1"
                     VerticalAlignment="Center" HorizontalAlignment="Stretch"  >
            <Button Content="Sales" FontSize="16" Margin="10" Padding="10" Height="35"
             Command="{Binding ShowSalesViewCommand}"
             Style="{StaticResource ButtonRound}">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#043915" Offset="0.0"/>
                        <GradientStop Color="#B0CE88" Offset="1.25"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Content="Inventory Management" FontSize="16" Margin="10"
             Command="{Binding ShowInventoryManagementViewCommand}"
             Style="{StaticResource ButtonRound}">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#043915" Offset="0.0"/>
                        <GradientStop Color="#B0CE88" Offset="1.25"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Content="Reports" FontSize="16" Margin="10"
             Command="{Binding ShowReportsViewCommand}"
             Style="{StaticResource ButtonRound}">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#043915" Offset="0.0"/>
                        <GradientStop Color="#B0CE88" Offset="1.25"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Content="User Management" FontSize="16" Margin="10"
             Command="{Binding ShowUserManagementViewCommand}"
             Style="{StaticResource ButtonRound}">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#043915" Offset="0.0"/>
                        <GradientStop Color="#B0CE88" Offset="1.25"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </UniformGrid>
        
        <ContentControl Grid.Row="1" Content="{Binding ActiveView}"/>
        <Image Grid.Row="2" Source="/Images/Logo.png" Stretch="Fill" Height="100"/>
    </Grid>
</UserControl>
